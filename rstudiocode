StarkBoats <- sqlQuery(ch, paste("SELECT BOATS FROM REGIONS", "WHERE RULED_BY = 'Stark'"))
ArrynBoats <- sqlQuery(ch, paste("SELECT BOATS FROM REGIONS", "WHERE RULED_BY = 'Arryn'"))
